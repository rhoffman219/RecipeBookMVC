@model RecipeBookMVC.ViewModels.AddCategoryViewModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add A Recipe Category</h2>

<p>Add a category to sort your recipes. Example categores can be Breakfast, Lunch, Dinner, or Deserts! Category Away!</p>

<form asp-controller="Category" asp-action="Add" method="post">

    <div class="form-group">

        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>

    </div>

    <input type="submit" value="Add Category" />

</form>
